<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_validasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.its.driverezlyn.validasi">

    <TextView
        android:text="Nomor Plat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textSize="35px"
        android:id="@+id/preview_plat1"
        android:layout_below="@+id/apa_benar"
        android:layout_toStartOf="@+id/preview_trayek"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="Kode Lyn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:id="@+id/preview_kode1"
        android:layout_alignBaseline="@+id/preview_plat1"
        android:layout_alignBottom="@+id/preview_plat1"
        android:layout_toEndOf="@+id/preview_trayek"
        android:layout_marginStart="37dp" />

    <TextView
        android:text="Trayek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preview_trayek"
        android:textSize="35px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="S 402 HI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/show_plat"
        android:textAlignment="center"
        android:textSize="40px"
        android:layout_below="@+id/preview_plat1"
        android:layout_alignEnd="@+id/preview_plat1" />

    <Button
        android:text="Kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_valid"
        android:layout_alignBaseline="@+id/next_valid"
        android:layout_alignBottom="@+id/next_valid"
        android:layout_toStartOf="@+id/next_valid"
        android:layout_marginEnd="17dp"
        android:onClick="balikIsi"
        />

    <TextView
        android:text="Sudah benar?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/apa_benar"
        android:textSize="50px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="WK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_kode"
        android:textSize="40px"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/show_plat"
        android:layout_alignBottom="@+id/show_plat"
        android:layout_toEndOf="@+id/apa_benar"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="Jembatan Merah – Univ Hang Tuah – Keputih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_trayek"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/preview_trayek"
        android:layout_alignStart="@+id/preview_plat1" />

    <Button
        android:text="Lanjutkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/next_valid"
        android:onClick="LanjutDasbor"
        android:layout_below="@+id/show_trayek"
        android:layout_alignEnd="@+id/show_kode" />

</RelativeLayout>
