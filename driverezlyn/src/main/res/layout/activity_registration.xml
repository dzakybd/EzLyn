<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regis_lyn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.its.driverezlyn.activity.RegistrationActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Plat nomor angkot"
        android:ems="10"
        android:id="@+id/plat_nomor"
        android:hint="Plat Nomor Anda"
        android:layout_below="@+id/preview_plat"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Silakan isi data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/apa_benar"
        android:textSize="50px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preview_kode"
        android:text="Kode Angkot"
        android:textSize="50px"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/plat_nomor"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plat Nomor"
        android:textSize="50px"
        android:id="@+id/preview_plat"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/apa_benar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_regis"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="109dp"
        android:layout_alignStart="@+id/apa_benar"
        android:layout_alignEnd="@+id/apa_benar"
        android:onClick="goRegis"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kodeAngkot"
        android:layout_below="@+id/preview_kode"
        android:layout_alignParentStart="true" />

</RelativeLayout>
